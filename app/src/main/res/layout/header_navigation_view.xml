<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="25dp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/metric_logo"
            android:contentDescription="metric_logo"
            android:src="@drawable/temperature"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/metric_option"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/metric_logo"
            android:layout_toEndOf="@id/metric_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="Metrics"/>

        <TextView
            android:id="@+id/degree_celsius"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/metric_switch"
            android:layout_toStartOf="@id/metric_switch"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="°C"/>

        <Switch
            android:id="@+id/metric_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/degree_fahrenheit"
            android:layout_toLeftOf="@+id/degree_fahrenheit" />

        <TextView
            android:id="@+id/degree_fahrenheit"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="°F"/>

    </RelativeLayout>

</RelativeLayout>